<div class="post-box">
	<div class="d-flex justify-content-between">
		<div class="d-flex user-name-and-image">
		  <span class="post-author-img">
		 	<%= image_tag user_avatar(post.author) , class: "img-fluid small-profile-img", alt: "small profile image" %>
	    </span> 
	    <span class="post-author-name ml-2"><%= link_to post.author.name, user_path(post.author), :class => "font-black" %></span> </div>
	    <% if current_user == post.author %>
	    <div class="post-delete-btn"><%= link_to "x", post, {:class => "font-red", method: :delete} %> </div>
	    <% end %>
	  
 </div>
<p class="post-time-ago my-2"><%= time_ago_in_words(post.created_at) %> ago.</p>
<p class="post-content"><%= post.content %></p>
<div class="d-flex justify-content-between post-like-line">
	<ul class="d-flex">
		<li>
			<% unless current_user.likes.exists?(post_id: post.id) %>
			  <%= button_to "ðŸ‘Ž",{:controller => 'likes', :action => 'create',:user_id => current_user.id, :post_id => post.id}, {:method => :post, :class => "trans-btn font-red mid-font"} %>
			<% else %>
			  <%= button_to "ðŸ‘",{:action => 'destroy',
			  	:controller => 'likes',:id => post.likes.find_by(user_id:current_user.id).id }, 
			  	{:method => :delete, :class => "trans-btn font-red mid-font"} %>
			  <% end %>
	</li>
			<li><%= post.likes.count %> Likes </li>
	</ul>

	<ul class="d-flex">
		<li class="comments-count">0 Comments</li>
		<li><button class="trans-btn">Reply</button></li>
	</ul>
</div>
</div>